										{% set i = i + 1 %}
                                       {% endif %}
                                     {% endfor %}
							{% endif %}
                        	{% if allowed_international_methods |length > 0 %}
                                {% set i=1 %}
                                {% for key, val in international_methods %}
									  {% if val.value in allowed_international_methods %}
