											{% if i == 1 %}
												{% set  selected_str =  (type == val.value or checkCountry ) ? 'selected="selected"' :  '' %}
											{% else %}
												 {%  set selected_str =  type  ==  val.value ? 'selected="selected"' :  '' %}
